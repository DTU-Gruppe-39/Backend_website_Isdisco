            headers: { 'Access-Control-Allow-Origin': '*' },
            method: 'get',
            dataType: 'text',
            contentType: 'application/json',
            success: function (response) {
                console.log(response);
            },
            error: function (xhr, status, error) {
                alert(status);
            }
        });
}

function stopEvent(){
    //alert("Stop Event");
