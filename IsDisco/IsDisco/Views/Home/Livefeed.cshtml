@using IsDisco.Controllers;
@using Newtonsoft.Json.Linq;
@using System.Net;
@{
    ViewData["Title"] = "Livefeed";

    Singleton instance = Singleton.getInstance();


    //Init lists if they are empty
    if (!instance.GetTracks().Any<Track>())
    {
        instance.InitTracks();
        Console.WriteLine("InitTracks");

    }

    //HttpRequestController httpRequest = new HttpRequestController();
    //  String Reqresp = httpRequest.Get("https://isdisco.azurewebsites.net/api/musicrequest");
    var webclient = new WebClient();
    var Reqresp = webclient.DownloadString("https://isdisco.azurewebsites.net/api/musicrequest");
    var jsonRequests = JObject.Parse(Reqresp);
    JArray JRequests = (JArray)jsonRequests["items"];
    List<Request> requests = new List<Request>();
    for (int i = 0; i < JRequests.Count; i++)
    {
        var userId = Convert.ToInt32(JRequests[i]["request"]["user"]["id"].ToString());
        var ReqId = Convert.ToInt32(JRequests[i]["request"]["id"].ToString());
        //  var userName = JRequests[i]["request"]["user"]["name"].ToString();
        var trackId = JRequests[i]["request"]["track"]["id"].ToString();
        var thesongName = JRequests[i]["request"]["track"]["name"].ToString();
        var artistName = JRequests[i]["request"]["track"]["artists"][0]["name"].ToString();
        var webplayerLink = JRequests[i]["request"]["track"]["external_urls"]["spotify"].ToString();
        var date = Convert.ToDateTime(JRequests[i]["request"]["timestamp"].ToString());
        //User usr = new User(userName, userId);
        Track track = new Track(trackId, thesongName, artistName, webplayerLink);
        Request Reqs = new Request(ReqId, track, userId, date);
        requests.Add(Reqs);
    }

    String Usrresp = webclient.DownloadString("https://isdisco.azurewebsites.net/api/user");
    var jsonUsrReq = JObject.Parse(Reqresp);
    JArray JUsrReq = (JArray)jsonUsrReq["items"];
    List<User> usrlist = new List<User>();
    for (int i = 0; i < JUsrReq.Count; i++)
    {
        var userId = Convert.ToInt32(JRequests[i]["user"]["id"].ToString());
        var userName = JRequests[i]["user"]["name"].ToString();
        User usr = new User(userName, userId);
        usrlist.Add(usr);
    }

    /*
    if (!instance.GetRequests().Any<Request>())
    {
        instance.InitRequests();
        requests = instance.GetRequests();
        Console.WriteLine("InitRequests");
    }
    else
    {
        requests = instance.GetRequests();
    }*/

    //Sorts the list so that the newest item is at the top
    requests.Sort((x, y) => -x.Timestamp.CompareTo(y.Timestamp));

    Html.Hidden("MyId", 0);


}

